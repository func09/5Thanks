- title 'パスワードを忘れた方 - 5Thanks'

.page-header
  %h2 パスワードを忘れた方

.row
  .span10
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      -if resource.errors.any?
        .alert-message.block-message.error
          %h3= "#{resource.errors.count}つのエラーのため保存できませんでした。"
          %ul
            - resource.errors.full_messages.each do |msg|
              %li= msg
      
      %fieldset
        .clearfix
          = f.label :email
          .input
            = f.email_field :email
        .actions
          = f.submit "パスワードを再登録するためのメールを送る", :class => 'btn primary'
    
  .span6
    = render :partial => "devise/shared/links"

